{
  "name": "@technote-space/release-drafter-github",
  "version": "6.3.13",
  "description": "A GitHub app that bumps version numbers in readmes",
  "keywords": [
    "github",
    "github actions",
    "github releases"
  ],
  "homepage": "https://github.com/technote-space/release-drafter",
  "bugs": {
    "url": "https://github.com/technote-space/release-drafter/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/technote-space/release-drafter.git"
  },
  "license": "ISC",
  "author": "Tim Lucas <t@toolmantim.com> (https://github.com/toolmantim)",
  "contributors": [
    {
      "name": "Technote",
      "email": "technote.space@gmail.com",
      "url": "https://technote.space"
    }
  ],
  "files": [
    "lib",
    "action.yml"
  ],
  "scripts": {
    "build": "tsc",
    "cover": "jest --coverage",
    "lint": "eslint 'src/**/*.ts' '__tests__/**/*.ts' --cache",
    "lint:fix": "eslint --fix 'src/**/*.ts' '__tests__/**/*.ts'",
    "release": "yarn release-ga --test",
    "test": "yarn lint && yarn cover",
    "update": "npm_config_yes=true npx npm-check-updates -u --timeout 100000 && yarn install && yarn upgrade && yarn audit",
    "postinstall": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/husky ] || husky install",
    "prepublishOnly": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --disable",
    "postpublish": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --enable"
  },
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/github": "^5.0.0",
    "@hapi/joi": "17.1.1",
    "@octokit/types": "^6.16.7",
    "@technote-space/filter-github-action": "^0.5.30",
    "@technote-space/github-action-config-helper": "^2.0.29",
    "@technote-space/github-action-helper": "^5.2.10",
    "@technote-space/github-action-log-helper": "^0.1.29",
    "compare-versions": "3.6.0",
    "lodash": "^4.17.21",
    "regex-parser": "2.2.11",
    "request": "2.88.2",
    "semver": "7.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@technote-space/github-action-test-helper": "^0.7.14",
    "@technote-space/release-github-actions-cli": "^1.8.6",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.4",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "7.29.0",
    "husky": "^6.0.0",
    "jest": "27.0.5",
    "jest-circus": "^27.0.5",
    "joi-to-json-schema": "^5.1.0",
    "lint-staged": "^11.0.0",
    "nock": "13.1.0",
    "nock-knock": "2.0.0",
    "node-fetch": "2.6.1",
    "nodemon": "2.0.7",
    "pinst": "^2.1.6",
    "prettier": "2.3.1",
    "smee-client": "1.2.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
